{
  "service_configuration": {
    "name": "abu_dhabi_infrastructure",
    "title": "Abu Dhabi Infrastructure",
    "description": "Comprehensive infrastructure dataset for Abu Dhabi",
    "service_type": "FeatureServer",
    "version": "1.0.0"
  },
  "connection": {
    "url": "https://services.arcgis.com/your-org/arcgis/rest/services/service-name/FeatureServer",
    "authentication": {
      "type": "none|token|oauth2",
      "token_url": "https://your-portal.arcgis.com/sharing/rest/generateToken",
      "client_id": "your-client-id",
      "client_secret": "your-client-secret"
    }
  },
  "layers": [
    {
      "id": 0,
      "name": "schools",
      "title": "Educational Facilities",
      "description": "Schools and educational institutions in Abu Dhabi",
      "geometry_type": "esriGeometryPoint",
      "fields": [
        {
          "name": "OBJECTID",
          "type": "esriFieldTypeOID",
          "alias": "Object ID"
        },
        {
          "name": "Name",
          "type": "esriFieldTypeString",
          "length": 255,
          "alias": "School Name"
        },
        {
          "name": "Type",
          "type": "esriFieldTypeString",
          "length": 100,
          "alias": "School Type"
        },
        {
          "name": "District",
          "type": "esriFieldTypeString",
          "length": 100,
          "alias": "District"
        }
      ],
      "renderer": {
        "type": "simple",
        "symbol": {
          "type": "picture-marker",
          "url": "/icons/nature.png",
          "width": 24,
          "height": 24
        }
      },
      "popup_template": {
        "title": "{Name}",
        "content": [
          {
            "type": "fields",
            "fieldInfos": [
              {
                "fieldName": "Type",
                "label": "School Type"
              },
              {
                "fieldName": "District",
                "label": "District"
              }
            ]
          }
        ]
      }
    }
  ],
  "capabilities": {
    "query": true,
    "extract": false,
    "sync": false,
    "editing": false
  },
  "spatial_reference": {
    "wkid": 4326,
    "latest_wkid": 4326
  },
  "extent": {
    "xmin": 54.0,
    "ymin": 24.0,
    "xmax": 55.0,
    "ymax": 25.0,
    "spatial_reference": {
      "wkid": 4326
    }
  },
  "performance": {
    "max_record_count": 1000,
    "cache_enabled": true,
    "cache_duration_minutes": 60
  },
  "nlp_configuration": {
    "keywords": ["school", "education", "university", "college"],
    "entity_patterns": {
      "GPE": ["Abu Dhabi", "Dubai", "Al Ain"],
      "ORG": ["ADEC", "MOE"],
      "TYPE": ["primary", "secondary", "university"]
    },
    "query_examples": [
      "Show all schools in Abu Dhabi",
      "Find universities near Emirates Palace",
      "List primary schools in Al Ain"
    ]
  }
}
